generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String
  email    String
  password String

  referralCode String @unique
  referredBy   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  referred  Referral[] @relation("ReferredUsers")
  referrals Referral[] @relation("ReferringUsers")

  @@unique([username, email])
}

model Referral {
  id              String @id @default(cuid())
  status          String
  referringUserId String
  referredUserId  String

  referredTo User @relation("ReferredUsers", fields: [referredUserId], references: [id])
  referredBy User @relation("ReferringUsers", fields: [referringUserId], references: [id])

  dateReferred DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
